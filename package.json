{
  "name": "@ycechung/cmd-ssg",
  "engines": {
    "node": ">=16.9.1",
    "npm": ">=7.21.1"
  },
  "version": "1.0.2",
  "description": "cli .txt to html converter",
  "main": "./bin/index.js",
  "dependencies": {
    "@types/yargs": "^17.0.2",
    "boxen": "^5.0.1",
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "cli-boxes": "^2.2.1",
    "commander": "^8.1.0",
    "fastify": "^3.21.3",
    "figlet": "^1.5.2",
