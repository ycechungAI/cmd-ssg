    "y18n": "^4.0.3",
    "yargs": "^17.2.1",
    "yargs-parser": "^13.1.2"
  },
  "scripts": {
    "eslint": "eslint --ignore-path .gitignore .",
    "eslint-fix": "eslint --fix --ignore-path .gitignore .",
    "prettier-check": "npx prettier --check .",
    "prettier": "npx prettier --write .",
    "lint": "npm run eslint",
    "pretest": "npm run lint",
    "prepare": "husky install",
    "test": "jest",
